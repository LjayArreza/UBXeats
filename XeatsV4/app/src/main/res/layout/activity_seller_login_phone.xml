<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sellerbg"
    tools:context=".Seller.sellerLoginPhone">

    <LinearLayout
        android:layout_width="280dp"
        android:layout_height="400dp"
        android:id="@+id/linearlayoutSP"
        android:background="@drawable/btnblueish"
        android:orientation="vertical"
        android:padding="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textview6SP"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:text="Seller Phone Verification"
            android:clickable="true"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:focusable="true" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <com.hbb20.CountryCodePicker
                android:layout_width="130dp"
                android:layout_height="match_parent"
                android:id="@+id/CountryCodeSP"
                app:ccp_defaultLanguage="ENGLISH"
                app:ccp_defaultNameCode="PH"/>
            <EditText
                android:layout_width="132dp"
                android:layout_height="wrap_content"
                android:id="@+id/numberCP"
                android:layout_marginLeft="8dp"
                android:inputType="number"/>
        </LinearLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/sendOtpBtn"
            android:layout_marginTop="25dp"
            android:background="@drawable/button_shape"
            android:text="Send OTP"
            android:textSize="18sp"
            android:textColor="#FFFF"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textview7SP"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:text="Do you have an account? Sign Up"
            android:clickable="true"
            android:layout_marginTop="15dp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:focusable="true" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:layout_marginStart="7dp"
            android:orientation="horizontal">

            <TableRow
                android:id="@+id/hrSP"
                android:layout_width="90dp"
                android:layout_height="1dp"
                android:layout_marginTop="20dp"
                android:background="#FFFFFF" >

            </TableRow>

            <TextView
                android:id="@+id/orSP"
                android:layout_width="44dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:gravity="center"
                android:text="OR"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="17dp" />

            <TableRow
                android:id="@+id/hr2SP"
                android:layout_width="90dp"
                android:layout_height="1dp"
                android:layout_marginTop="20dp"
                android:background="#FFFFFF" >

            </TableRow>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/signphoneSP"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:layout_marginTop="11dp"
            android:text="SignIn With"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:textSize="18sp"/>

        <Button
            android:layout_width="105dp"
            android:layout_height="40sp"
            android:id="@+id/btnemailSP"
            android:layout_gravity="center"
            android:text="Email"
            android:background="@drawable/btnorange"
            android:layout_marginTop="13dp"
            android:drawableLeft="@drawable/whitemail"
            android:padding="10dp"
            android:textColor="#FFFFFF"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>