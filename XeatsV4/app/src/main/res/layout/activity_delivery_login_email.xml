<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/deliverybg"
    tools:context=".Delivery.deliveryLoginEmail">

    <LinearLayout
        android:layout_width="280dp"
        android:layout_height="446dp"
        android:id="@+id/linearlayoutD"
        android:layout_marginRight="60dp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="210dp"
        android:layout_marginBottom="215dp"
        android:background="@drawable/btnorange"
        android:orientation="vertical"
        android:padding="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/sellerLoginEmailD"
            android:layout_marginTop="15dp"
            android:paddingBottom="10dp">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_baseline_email_24"
                android:drawablePadding="10dp"
                android:hint="Email"
                android:inputType="textEmailAddress" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/sellerLoginPassword"
            android:layout_marginTop="5dp"
            android:paddingBottom="10dp">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_baseline_lock_24"
                android:drawablePadding="10dp"
                android:hint="Password"
                android:inputType="textEmailAddress" />

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/forgotPasswordSellerD"
            android:gravity="end"
            android:textSize="16sp"
            android:text="Forgot Password?"
            android:clickable="true"
            android:textColor="#090909"
            android:focusable="true" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/sellerLoginBtnD"
            android:layout_marginTop="20dp"
            android:background="@drawable/button_shape"
            android:text="Login"
            android:textSize="18sp"
            android:textColor="#FFFF"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textview6D"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:text="No Delivery account? Click Here!"
            android:clickable="true"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:focusable="true" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:layout_marginStart="7dp"
            android:orientation="horizontal">

            <TableRow
                android:id="@+id/hrD"
                android:layout_width="90dp"
                android:layout_height="1dp"
                android:layout_marginTop="20dp"
                android:background="#FFFFFF" >

            </TableRow>

            <TextView
                android:id="@+id/orD"
                android:layout_width="44dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:gravity="center"
                android:text="OR"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="17dp" />

            <TableRow
                android:id="@+id/hr2D"
                android:layout_width="90dp"
                android:layout_height="1dp"
                android:layout_marginTop="20dp"
                android:background="#FFFFFF" >

            </TableRow>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/signphoneD"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:layout_marginTop="11dp"
            android:text="SignIn With"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:textSize="18sp"/>

        <Button
            android:layout_width="105dp"
            android:layout_height="40sp"
            android:id="@+id/btnphoneD"
            android:layout_gravity="center"
            android:text="Phone"
            android:background="@drawable/btnblueish"
            android:layout_marginTop="13dp"
            android:drawableLeft="@drawable/whitephone"
            android:padding="10dp"
            android:textColor="#FFFFFF"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>